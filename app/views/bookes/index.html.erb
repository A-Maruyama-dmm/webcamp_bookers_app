<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
   </thead>
   <tbody>
  <% @bookes.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", booke_path(book.id) %></td>
       <td><%= link_to "Edit", edit_booke_path(book.id) %></td>
       <td><%= link_to "Destroy", booke_path(book.id), method: :delete %></td>
     </tr>
  <% end %>
  </tbody>
  </table>



<h2>New book</h2>
<%= form_with model: @books, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
 <p><%= f.submit 'Create Book' %></p>
 <% end %>
